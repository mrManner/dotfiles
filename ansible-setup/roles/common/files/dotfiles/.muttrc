# ================================== Paths =====================================

set folder              =   ~/.mail                     # Teh mailbox
set alias_file          =   ~/.mutt/alias
source ~/.mutt/alias
set mailcap_path        =   ~/.mutt/mailcap             # Filetypes
set tmpdir              =   ~/.mutt/temp
set signature           =   ~/.mutt/sig

# ================================= Basics =====================================
source ~/.mutt-solarized.muttrc
set wait_key = no           # Something something "shut up, mutt"?
set mbox_type = Maildir
set timeout = 3             # Idle time before scanning (what?)
set mail_check = 0          # Minimum time between scans
unset move                  # Gmail does this?
set delete                  # Don't ask
unset confirmappend         # Just do
set pipe_decode
set thorough_search

# ================================= Status bar =================================

set status_chars = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"


# ================================== Accounts ==================================

set spoolfile = "+mrmanner.eu/INBOX"
alternates hi@mrmanner.eu hej@mrmanner.eu cop@mrmanner.eu admin@mrmanner.eu johan.manner@kfum.se johan.manner@km.scout.se jmanner@kth.se

set mbox        =   "+mrmanner.eu/archive"
set postponed   =   "+mrmanner.eu/drafts"

# Index View Options ---------------------------------
set date_format = "%m/%d"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([RrSs][EeVv]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# Index keybindings
bind index gg       first-entry
bind index G        last-entry
bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>" "move a message to a mailbox"

 # Pager View Options ---------------------------------
 set pager_index_lines = 10 # number of index lines to show
 set pager_context = 3      # number of context lines to show
 set pager_stop             # don't go to next message automatically
 set menu_scroll            # scroll in menus
 set tilde                  # show tildes like in vim
 unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# Pager Key Bindings ---------------------------------
bind pager k  previous-line
bind pager j  next-line
bind pager gg top
bind pager G  bottom

bind pager R  group-reply

# View attachments properly.
bind attach <return> view-mailcap

# Compose View Options -------------------------------
set realname = "Johan Manner"        # who am i?
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards

set editor = "vim"

# Sync email
macro index O "<shell-escape>offlineimap<enter>"           "run offlineimap to sync all mail"
macro index o "<shell-escape>offlineimap -qf INBOX<enter>" "run offlineimap to sync inbox"


# Sidebar patch 
set sidebar_delim       = '  |  '
set sidebar_visible     = yes
set sidebar_width       = 45
set sidebar_shortpath   = yes
mailboxes   +mrmanner.eu/INBOX \
            +kfum.se/INBOX \
            +kth.se/INBOX \
            +mrmanner.eu/devscout \
            +mrmanner.eu/lists.Climate.RGE-COP \
            +mrmanner.eu/lists.Climate.YOUNGO \
            +mrmanner/eu/lists.Climate.YOUNGO.Intersessionals \
            +mrmanner.eu/lists.computers.fedora-desktop \
            +mrmanner.eu/lists.computers.python \
            +mrmanner.eu/lists.computers.fedora-users \
            +mrmanner.eu/news
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

# SMTP

set from     = "johan@mrmanner.eu"
set sendmail = "/usr/local/bin/msmtp -a mrmanner"
set sendmail_wait = 0
unset record

macro generic "<esc>1" ":set from='Johan Manner <johan@mrmanner.eu>'"
macro generic "<esc>2" ":set from='Johan Manner <johan.manner@kfum.se>'"
macro generic "<esc>3" ":set from='Johan Manner <jmanner@kth.se>'"

send-hook . 'unset record'
send-hook '~f johan.manner@kfum.se' 'set record="=kfum.se/Sent Items"'
send2-hook '~f johan@mrmanner.eu' 'set sendmail="msmtp -a mrmanner"'
send2-hook '~f johan.manner@kfum.se' 'set sendmail="msmtp -a kfum"'
send2-hook '~f jmanner@kth.se' 'set sendmail="msmtp -a kth"'

# GPG
source ~/.gpg.muttrc
set pgp_use_gpg_agent = yes
set pgp_sign_as = 51282268
set pgp_timeout = 3000
set crypt_autosign = yes
set crypt_replyencrypt = yes
set pgp_verify_sig = yes


























