[general]
ui = ttyui
accounts = mrmanner, kfum, kth
pythonfile=~/.offlineimap.py
fsync = False

[Account mrmanner]
localrepository = mrmannerlocal
remoterepository = mrmannerremote
status_backend = sqlite
postsynchook = notmuch new

[Account kfum]
localrepository = kfumlocal
remoterepository = kfumremote
status_backend = sqlite
postsynchook = notmuch new

[Account kth]
localrepository = kthlocal
remoterepository = kthremote
status_backend = sqlite
postsynchook = notmuch new

[Repository mrmannerlocal]
type = Maildir
localfolders = ~/.mail/mrmanner.eu
nametrans = lambda folder: {'drafts':   '[Gmail]/Drafts',
                            'sent':     '[Gmail]/Sent Mail',
                            'flagged':  '[Gmail]/Starred',
                            'trash':    '[Gmail]/Trash',
                            'archive':  '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository mrmannerremote]
sslcacertfile = /etc/pki/ca-trust/extracted/pem/email-ca-bundle.pem
maxconnections = 1
type = Gmail
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':       'drafts',
                            '[Gmail]/Sent Mail':    'sent',
                            '[Gmail]/Starred':      'flagged',
                            '[Gmail]/Trash':        'trash',
                            '[Gmail]/All Mail':     'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Spam',
                                            '[Gmail]/Important',
                                            ]
[Repository kfumlocal]
type = Maildir
localfolders = ~/.mail/kfum.se

[Repository kfumremote]
type = IMAP
ssl = yes
maxconnections = 1
sslcacertfile = /etc/pki/ca-trust/extracted/pem/email-ca-bundle.pem
remotehost = mail.rundesktop.se
folderfilter = lambda folder: folder not in ['Contacts',
                                            'Calendar',
                                            'Junk Email',
                                            'Journal',
                                            'Notes',
                                            'RSS-feeds',
                                            'Tasks',
                                            'Deleted Items',
                                            ]

[Repository kthlocal]
type = Maildir
localfolders = ~/.mail/kth.se

[Repository kthremote]
type = IMAP
ssl = yes
maxconnections = 1
sslcacertfile = /etc/pki/ca-trust/extracted/pem/email-ca-bundle.pem
remotehost = webmail.kth.se
folderfilter = lambda folder: folder not in ['Contacts',
                                            'Suggested Contacts',
                                            'Calendar',
                                            'Calendar/Calendar (1)',
                                            'Calendar/CDATE-EUR',
                                            'Calendar/FEK',
                                            'Junk Email',
                                            'Journal',
                                            'Notes',
                                            'RSS-feeds',
                                            'Tasks',
                                            'Synkroniseringsproblem',
                                            'Synkroniseringsproblem/Konflikter',
                                            'Synkroniseringsproblem/Lokala fel',
                                            'Synkroniseringsproblem/Serverfel',
                                            'Deleted Items',
                                            ]

